@import "/style/step.wxss";
@import "/style/select.wxss";
@import "/components/template.wxss";

page {
  background-color: #fff;
}

.link {
  padding: 0rpx 50rpx;
  margin-top: -25rpx;
}

.schedules {
  display: flex;
  flex-direction: row;
  margin: 0 auto;
  margin-top: 50rpx;
  align-items: center;
}

.schedule-icon {
  font-size: 9pt;
  display: flex;
  justify-content: center;
}

.icon {
  width: 40rpx;
  height: 40rpx;
  color: #fff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 20rpx;
}

.schedule-title {
  margin-top: 13rpx;
  font-size: 11pt;
  color: #cccccc;
}


.bgactivate {
  background-color: #0081ff;
}

.bgunactivate {
  background-color: #cccccc;
}

.textunactivate {
  color: #cccccc
}

.textactivate {
  color: #0081ff;
}

.question_icon image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 40rpx;
}

.last_no {
  margin-left: 240rpx;
}

.switch_right {
  flex: 1;
  text-align: right;
}

.picker_right {
  flex: 1;
  text-align: right;
  align-self: center;
  color: grey;
}

.picker_right picker {
  font-size: 12pt;
}

.margin {
  margin-top: 30rpx;
  margin-bottom: 30rpx;
}

.question_font text {
  font-size: larger;
  margin: 10rpx;
}

.buttom_style {
  border-radius: 15rpx;
}

.bright {
  border: 2rpx dashed #1296db;
  margin: -10rpx;
  margin-top: 10rpx;
}

.wenti{
  width: 100%;
  position: relative;
  margin-bottom: 10rpx;
}
.eachTopic {
  position: absolute;
  width: 100%;
  height: 100%;
  top: 0;
  left: 0;
}
.temp{
  width: 100%;
  display: flex;
  height: 70rpx;
  flex-flow: nowrap;
  font-size: 25rpx;
  color: #999;
  padding: 20rpx 0;
  background-color: #f5f5f5;
  z-index: 999;
}
.temp_up{
  width: 25%;
  display: flex;
  flex-flow: wrap;
  justify-content: center;
}
.temp_name{
  width:100%;
  display: flex;
  justify-content: center;
}
.temp_img{
  height: 50rpx;
  width: 50rpx;
}